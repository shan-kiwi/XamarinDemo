<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinDemo.WebViewExmaple">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter URL" x:Name="URLEntry"/>
            <Button Text="Go" Clicked="OpenURL"/>
            <StackLayout>
                <ScrollView>
                    <WebView x:Name="Browser" VerticalOptions="FillAndExpand">
                        
                    </WebView>
                </ScrollView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>